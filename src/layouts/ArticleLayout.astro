---
const { 
  title, 
  authors, 
  journal, 
  volume, 
  year, 
  abstract, 
  pdfUrl,
  keywords = [],
  publishDate
} = Astro.props;

const fullAuthors = authors.join(', ');
const currentUrl = `${Astro.site}${Astro.url.pathname}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | Andrea Tosato</title>
  <meta name="description" content={abstract.substring(0, 160)}>
  <meta name="author" content={fullAuthors}>
  <meta name="keywords" content={keywords.join(', ')}>
  
  <!-- Google Scholar Meta Tags -->
  <meta name="citation_title" content={title}>
  {authors.map(author => (
    <meta name="citation_author" content={author}>
  ))}
  <meta name="citation_publication_date" content={publishDate}>
  <meta name="citation_journal_title" content={journal}>
  {volume && <meta name="citation_volume" content={volume}>}
  {pdfUrl && <meta name="citation_pdf_url" content={pdfUrl}>}
  
  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={abstract.substring(0, 200)}>
  <meta property="og:type" content="article">
  <meta property="og:url" content={currentUrl}>
  
  <!-- Schema.org -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ScholarlyArticle",
    "headline": title,
    "author": authors.map(author => ({
      "@type": "Person",
      "name": author
    })),
    "datePublished": publishDate,
    "publication": journal,
    "abstract": abstract,
    "url": currentUrl,
    ...(pdfUrl && { "encoding": { "@type": "MediaObject", "contentUrl": pdfUrl } })
  })} />
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
      line-height: 1.8;
      color: #000;
      background: #fff;
      font-size: 17px;
    }

    nav {
      border-bottom: 1px solid #000;
      padding: 1.5rem 0;
      background: #fff;
    }

    .nav-container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    nav a {
      color: #000;
      text-decoration: none;
      font-size: 1rem;
      transition: opacity 0.2s;
    }

    nav a:hover {
      opacity: 0.5;
    }

    .container {
      max-width: 850px;
      margin: 0 auto;
      padding: 3rem 2rem 4rem 2rem;
    }

    h1 {
      font-size: 2.5rem;
      font-weight: 300;
      line-height: 1.3;
      margin-bottom: 2rem;
      letter-spacing: -0.02em;
      color: #000;
    }

    .authors {
      font-size: 1.05rem;
      margin-bottom: 0.5rem;
      color: #000;
    }

    .publication-info {
      font-size: 1rem;
      color: #666;
      margin-bottom: 3rem;
    }

    .abstract-section {
      margin: 3rem 0;
    }

    .abstract-section h2 {
      font-size: 1rem;
      font-weight: 500;
      margin-bottom: 1.5rem;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      color: #000;
    }

    .abstract-text {
      text-align: justify;
      line-height: 1.9;
      font-size: 1.05rem;
      color: #000;
    }

    .keywords {
      margin: 3rem 0;
    }

    .keywords h3 {
      font-size: 0.9rem;
      font-weight: 500;
      margin-bottom: 1rem;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: #000;
    }

    .keyword-list {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .keyword {
      color: #666;
      font-size: 0.9rem;
    }

    .keyword:not(:last-child)::after {
      content: "•";
      margin-left: 1rem;
      color: #ccc;
    }

    .download-section {
      margin: 3rem 0;
      padding: 2.5rem 0;
      border-top: 1px solid #e0e0e0;
      border-bottom: 1px solid #e0e0e0;
      text-align: center;
    }

    .download-button {
      display: inline-block;
      color: #000;
      background: #fff;
      padding: 1rem 2rem;
      text-decoration: none;
      border: 2px solid #000;
      font-size: 0.9rem;
      font-weight: 500;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      transition: all 0.2s ease;
    }

    .download-button:hover {
      background: #000;
      color: #fff;
    }

    footer {
      border-top: 1px solid #000;
      padding: 2rem;
      text-align: center;
      margin-top: 4rem;
      font-size: 0.9rem;
      color: #666;
    }

    @media (max-width: 768px) {
      .container {
        padding: 2rem 1.5rem;
      }

      h1 {
        font-size: 2rem;
      }

      .nav-container {
        padding: 0 1.5rem;
      }
    }
  </style>
</head>
<body>
  <nav>
    <div class="nav-container">
      <a href="/articles">← Back to Articles</a>
    </div>
  </nav>

  <div class="container">
    <article>
      <h1>{title}</h1>
      <div class="authors">{fullAuthors}</div>
      <div class="publication-info">
        {journal}{volume && `, ${volume}`} ({year})
      </div>

      <div class="abstract-section">
        <h2>Abstract</h2>
        <div class="abstract-text">
          {abstract}
        </div>
      </div>

      {keywords.length > 0 && (
        <div class="keywords">
          <h3>Keywords</h3>
          <div class="keyword-list">
            {keywords.map(keyword => (
              <span class="keyword">{keyword}</span>
            ))}
          </div>
        </div>
      )}

      <div class="download-section">
        <a href={pdfUrl} class="download-button" target="_blank" rel="noopener">
          Download PDF
        </a>
      </div>
    </article>
  </div>

  <footer>
    <p>© 2025 Andrea Tosato. All rights reserved.</p>
  </footer>
</body>
</html>
