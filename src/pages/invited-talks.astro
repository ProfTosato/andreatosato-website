---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Invited Talks and Media">
  <style>
    .content {
      max-width: 850px;
      margin: 0 auto;
      padding: 3rem 2rem;
    }

    h1 {
      font-size: 2.5rem;
      font-weight: 300;
      margin-bottom: 3rem;
      letter-spacing: -0.02em;
      color: #000;
    }

    .placeholder {
      font-size: 1.05rem;
      line-height: 1.8;
      color: #666;
      font-style: italic;
    }

    @media (max-width: 768px) {
      .content {
        padding: 2rem 1.5rem;
      }

      h1 {
        font-size: 2rem;
      }
    }
  </style>

  <div class="content">
    <h1>Invited Talks and Media</h1>
    
    <p class="placeholder">
      Information about invited talks, conference presentations, and media appearances will be added here. Check back soon for updates.
    </p>
  </div>
</Layout>
