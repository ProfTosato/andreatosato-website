---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Invited Talks and Media">
  <style>
    .content {
      max-width: 850px;
      margin: 0 auto;
      padding: 2.5rem 2rem;
    }

    h1 {
      font-size: 2.5rem;
      font-weight: 300;
      margin-bottom: 2.5rem;
      letter-spacing: -0.02em;
      color: #000;
    }

    h2 {
      font-size: 1.3rem;
      font-weight: 500;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      margin-top: 2.5rem;
      margin-bottom: 1.5rem;
      color: #000;
    }

    h2:first-of-type {
      margin-top: 0;
    }

    .talk-item {
      margin-bottom: 1.5rem;
      padding-bottom: 1.5rem;
      border-bottom: 1px solid #f0f0f0;
      line-height: 1.7;
    }

    .talk-item:last-child {
      border-bottom: none;
    }

    @media (max-width: 768px) {
      .content {
        padding: 2rem 1.5rem;
      }

      h1 {
        font-size: 2rem;
      }

      h2 {
        font-size: 1.1rem;
      }
    }
  </style>

  <div class="content">
    <h1>News, Media & Invited Talks</h1>
    
