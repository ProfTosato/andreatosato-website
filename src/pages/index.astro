---
import Layout from '../layouts/Layout.astro';

const recentArticles = [
  {
    title: "Bankrupt Crypto Organizations",
    journal: "North Carolina Law Review",
    volume: "104",
    year: "forthcoming 2026",
    coauthors: "with Kara Bruce and Christopher Odinet",
    url: "/articles/bankrupt-crypto-organizations"
  },
  {
    title: "Digital Assets and the Property Question",
    journal: "Florida Law Review",
    volume: "78",
    year: "forthcoming 2026",
    coauthors: "with Christopher Odinet",
    url: "/articles/digital-assets-property-question"
  },
  {
    title: "Debt Tokens",
    journal: "University of Pennsylvania Law Review",
    volume: "173",
    year: "2025",
    coauthors: "with Diane Lourdes Dick and Christopher Odinet",
    url: "/articles/debt-tokens"
  }
];

const recentEssays = [
  {
    title: "Regulating Stablecoins: Comparing MiCAR and the GENIUS Act",
    publication: "Notre Dame Law Review Reflection",
    year: "forthcoming 2026",
    coauthors: "with Christopher Odinet",
    url: "/essays/regulating-stablecoins"
  },
  {
    title: "Tokenized Real Estate: The Law and Tech of Digital Deeds",
    publication: "Ohio State Law Journal Online",
    year: "forthcoming 2026",
    coauthors: "with Christopher Odinet",
    url: "/essays/tokenized-real-estate"
  },
  {
    title: "DAOs in Financial Distress",
    publication: "Foundations of Decentralized Organizations: Blockchain and the Future of Corporate Law",
    year: "forthcoming",
    coauthors: "with Kara Bruce and Christopher Odinet",
    url: "/essays/daos-financial-distress"
  }
];
---

<Layout>
  <style>
    .hero {
      padding: 3rem 0 2.5rem 0;
      border-bottom: 1px solid #e0e0e0;
    }

    .hero-container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 0 2rem;
      display: flex;
      align-items: center;
      gap: 2rem;
    }

    .profile-image {
      width: 180px;
      height: auto;
      object-fit: contain;
      flex-shrink: 0;
    }

    .hero-content {
      flex: 1;
    }

    h1 {
      font-size: 3.5rem;
      font-weight: 300;
      margin-bottom: 1rem;
      letter-spacing: -0.02em;
      line-height: 1.1;
      color: #000;
    }

    .subtitle {
      font-size: 1.25rem;
      color: #666;
      font-weight: 300;
      margin-bottom: 1rem;
    }

    .hero-links {
      display: flex;
      gap: 1.5rem;
      align-items: center;
      margin-top: 1.5rem;
    }

    .social-icons {
      display: flex;
      gap: 1rem;
    }

    .social-icon {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background-color: #000;
      color: #fff;
      text-decoration: none;
      font-size: 1.2rem;
      transition: opacity 0.2s;
    }

    .social-icon:hover {
      opacity: 0.7;
    }

    .cv-button {
      display: inline-block;
      padding: 0.6rem 1.5rem;
      background-color: #000;
      color: #fff;
      text-decoration: none;
      border-radius: 4px;
      font-size: 0.95rem;
      letter-spacing: 0.05em;
      transition: opacity 0.2s;
    }

    .cv-button:hover {
      opacity: 0.8;
    }

    section {
      max-width: 1000px;
      margin: 0 auto;
      padding: 2.1rem 2rem;
      border-bottom: 1px solid #e0e0e0;
    }

    section:last-of-type {
      border-bottom: none;
    }

    h2 {
      font-size: 1.4rem;
      font-weight: 500;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      margin-bottom: 1.3rem;
      color: #000;
    }

    h2 a {
      color: #000;
      text-decoration: none;
      transition: opacity 0.2s;
    }

    h2 a:hover {
      opacity: 0.5;
    }

    .about-preview {
      font-size: 1.1rem;
      line-height: 1.8;
      max-width: 800px;
      color: #000;
    }

    .about-preview a {
      color: #000;
      text-decoration: underline;
      text-decoration-thickness: 1px;
      text-underline-offset: 3px;
    }

    .about-preview a:hover {
      opacity: 0.6;
    }

    .publication-item {
      margin-bottom: 1.5rem;
      padding-bottom: 1.3rem;
      border-bottom: 1px solid #f0f0f0;
    }

    .publication-item:last-child {
      border-bottom: none;
    }

    .publication-title {
      font-size: 1.3rem;
      font-weight: 400;
      margin-bottom: 0.5rem;
      letter-spacing: -0.01em;
      color: #000;
    }

    .publication-title a {
      color: #000;
      text-decoration: none;
      transition: opacity 0.2s;
    }

    .publication-title a:hover {
      opacity: 0.5;
    }

    .publication-meta {
      font-size: 1rem;
      color: #666;
      margin-bottom: 0.3rem;
    }

    .publication-coauthors {
      font-size: 0.95rem;
      color: #999;
    }

    .view-all {
      margin-top: 1.5rem;
    }

    .view-all a {
      color: #000;
      text-decoration: none;
      font-size: 0.95rem;
      letter-spacing: 0.05em;
      border-bottom: 2px solid #000;
      padding-bottom: 2px;
      transition: opacity 0.2s;
    }

    .view-all a:hover {
      opacity: 0.5;
    }

    .news-ticker {
      background-color: #f8f8f8;
      border-top: 1px solid #e8e8e8;
      border-bottom: 1px solid #e8e8e8;
      padding: 0.75rem 2rem;
      overflow: hidden;
      position: relative;
    }

    .news-ticker-container {
      max-width: 1000px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      min-height: 1.5rem;
    }

    .news-ticker-label {
      font-size: 0.75rem;
      font-weight: 500;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: #999;
      flex-shrink: 0;
    }

    .news-ticker-content {
      flex: 1;
      position: relative;
      height: 1.5rem;
    }

    .news-item {
      position: absolute;
      width: 100%;
      opacity: 0;
      transition: opacity 0.8s ease-in-out;
      font-size: 0.9rem;
      color: #333;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .news-item.active {
      opacity: 1;
    }

    .news-item a {
      color: #333;
      text-decoration: none;
      transition: opacity 0.2s;
    }

    .news-item a:hover {
      opacity: 0.6;
      text-decoration: underline;
    }

    @media (max-width: 768px) {
      h1 {
        font-size: 2.5rem;
      }

      .hero {
        padding: 2.5rem 0 2rem 0;
      }

      .hero-container {
        flex-direction: column;
        text-align: center;
        padding: 0 1.5rem;
      }

      .profile-image {
        width: 150px;
        height: auto;
      }

      .hero-links {
        flex-direction: column;
        gap: 1rem;
      }

      section {
        padding: 1.7rem 1.5rem;
      }

      .news-ticker {
        padding: 0.75rem 1.5rem;
      }

      .news-ticker-label {
        display: none;
      }

      .news-item {
        font-size: 0.85rem;
      }
    }
  </style>

  <div class="hero">
    <div class="hero-container">
      <img src="/profile.jpg" alt="Andrea Tosato" class="profile-image" />
      <div class="hero-content">
        <h1>Andrea Tosato</h1>
        <p class="subtitle">Professor of Law, SMU Dedman School of Law</p>
        <div class="hero-links">
          <div class="social-icons">
            <a href="https://www.smu.edu/law/faculty/profiles/tosato-andrea" class="social-icon" target="_blank" rel="noopener" title="SMU Profile" aria-label="SMU Profile">üéì</a>
            <a href="https://www.linkedin.com/in/andrea-tosato-5a862067/" class="social-icon" target="_blank" rel="noopener" title="LinkedIn" aria-label="LinkedIn">in</a>
            <a href="https://x.com/Andrea_Tosato" class="social-icon" target="_blank" rel="noopener" title="X (Twitter)" aria-label="X">ùïè</a>
            <a href="https://papers.ssrn.com/sol3/cf_dev/AbsByAuth.cfm?per_id=1851659" class="social-icon" target="_blank" rel="noopener" title="SSRN" aria-label="SSRN">üìÑ</a>
          </div>
          <a href="/Andrea-Tosato-CV.pdf" class="cv-button" download>Download CV</a>
        </div>
      </div>
    </div>
  </div>

  <div class="news-ticker">
    <div class="news-ticker-container">
      <span class="news-ticker-label">News</span>
      <div class="news-ticker-content">
        <div class="news-item active">
          üì∞ <a href="https://www.smu.edu/law/news-events/2025/professor-andrea-tosato-elected-to-ali-membership" target="_blank" rel="noopener">Professor Andrea Tosato Elected to the ALI</a>
        </div>
        <div class="news-item">
          üéôÔ∏è <a href="https://www.youtube.com/watch?v=4X904wo-56w&ab_channel=Block%26Order" target="_blank" rel="noopener">Featured on Block & Order Podcast: Bankrupt Crypto Organizations</a>
        </div>
        <div class="news-item">
          üìù <a href="https://www.barrons.com/articles/crypto-commercial-laws-definition-of-money-5fbd8fe4" target="_blank" rel="noopener">Featured in Barrons: Crypto's Future and Commercial Law</a>
        </div>
      </div>
    </div>
  </div>

  <script>
    const newsItems = document.querySelectorAll('.news-item');
    let currentIndex = 0;

    function rotateNews() {
      newsItems[currentIndex].classList.remove('active');
      currentIndex = (currentIndex + 1) % newsItems.length;
      newsItems[currentIndex].classList.add('active');
    }

    setInterval(rotateNews, 7000); // Rotate every 7 seconds
  </script>

  <section>
    <h2><a href="/about-me">About Me</a></h2>
    <div class="about-preview">
      <p>I am a Law Professor at the SMU Dedman School of Law, where my research focuses on the intersection between private law, emerging technologies, and intangible assets. My scholarship focuses particularly on commercial law, secured transactions, and bankruptcy law as they intersect with cryptocurrencies, stablecoins, NFTs, and verified carbon credits. <a href="/about-me">Read more ‚Üí</a></p>
    </div>
  </section>

  <section>
    <h2><a href="/articles">Recent Articles</a></h2>
    {recentArticles.map(article => (
      <div class="publication-item">
        <div class="publication-title">
          <a href={article.url}>{article.title}</a>
        </div>
        <div class="publication-meta">
          {article.journal}{article.volume && `, ${article.volume}`} ({article.year})
        </div>
        {article.coauthors && (
          <div class="publication-coauthors">{article.coauthors}</div>
        )}
      </div>
    ))}
    <div class="view-all">
      <a href="/articles">View all articles ‚Üí</a>
    </div>
  </section>

  <section>
    <h2><a href="/essays">Recent Essays</a></h2>
    {recentEssays.map(essay => (
      <div class="publication-item">
        <div class="publication-title">
          <a href={essay.url}>{essay.title}</a>
        </div>
        <div class="publication-meta">
          {essay.publication} ({essay.year})
        </div>
        {essay.coauthors && (
          <div class="publication-coauthors">{essay.coauthors}</div>
        )}
      </div>
    ))}
    <div class="view-all">
      <a href="/essays">View all essays ‚Üí</a>
    </div>
  </section>
</Layout>
